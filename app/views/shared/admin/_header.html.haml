%nav
  %div.flex-navbar
    = link_to Rails.configuration.application_name+' Admin', root_path, class:'navbar-brand'
    %ul
      %li
        = link_to "Announcements", admin_announcements_path
      %li
        = link_to "Guides", admin_guides_path
      - if current_user.present?
        %li
          = link_to '/' do
            %span
              %i.far.fa-flag{:'aria-hidden' => true}
        %li.dropdown
          = link_to '#', {data:{toggle:'.dropdown-menu', toggle_class:'active'}} do
            = image_tag gravatar_image_url(current_user.email, size: 40), height: 20, width: 20
            %span.username
              = current_user.name
          %ul.dropdown-menu
            - if current_user.admin?
              %li
                = link_to 'Admin', admin_root_path
            %li
              = link_to 'Settings', edit_user_registration_path
            %li
              = link_to 'Logout', destroy_user_session_path, method: :delete
      - else
        %li
          = link_to 'Sign Up', new_user_registration_path
        %li
          = link_to 'Login', new_user_session_path
  = yield :secondary_nav