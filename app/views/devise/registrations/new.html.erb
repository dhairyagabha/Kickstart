<div class="content">
  <div class="row">
    <div class="col-lg-4 col-md-8 col-sm-12 mx-auto">
      <div class="authentication-card">
        <div class="ac-body">
          <h2 class="ac-title">Sign up</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-field">
              <%= f.text_field :name, placeholder: :name, autofocus: true, autocomplete: "full name" %>
            </div>
            <div class="form-field">
              <%= f.email_field :email, placeholder: :email, autocomplete: "email" %>
            </div>
            <div class="form-field">
              <%= f.password_field :password, placeholder: :password, autocomplete: "off" %>
            </div>
            <div class="form-field">
              <%= f.password_field :password_confirmation, placeholder: :password_confirmation, autocomplete: "off" %>
            </div>
            <div class="actions">
              <%= button_tag "Sign up", type: :submit, class: "btn btn-success-outline btn-block", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Signing up..."} %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>